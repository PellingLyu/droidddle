    <Preference
        android:key="rate_app"
        android:title="@string/pref_title_rate"></Preference>
    <Preference
        android:key="about_like_tips"
        android:title="@string/pref_title_about_like"></Preference>
    <Preference
        android:key="about_app"
        android:title="@string/pref_title_about">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="org.goodev.droidddle.AboutActivity"
            android:targetPackage="@string/pkg_name" />
    </Preference>

</PreferenceScreen>